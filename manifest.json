{
    "manifest_version": 1,
    "name": "Jira Tracker",
    "version": "1.0",
   
    "description": "Jira issue tracker. Follow the state of issues by adding them to the list.",
    "homepage_url": "https://github.com/c4rd3/jira_tracker",
  
    "icons": {
      "48": "icons/icon.png"
    },
  
    "browser_action": {
        "default_icon": {
          "19": "icons/icon.png",
          "38": "icons/icon.png"
        },

        "default_title": "tracking",
        "default_popup": "popup/tracking.html"
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
      },

    "permissions": [
        "storage",
        "webRequest",
        "*://*/*"
    ]
  
  }